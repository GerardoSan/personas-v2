{
  "family": "personas-frontend",
  "networkMode": "awsvpc",
  "executionRoleArn": "${execution_role_arn}",
  "containerDefinitions": [
    {
      "name": "personas-frontend",
      "image": "${aws_ecr_repository_url}:${image_tag}",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "REACT_APP_API_URL",
          "value": "${api_gateway_url}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/personas-frontend",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
